aws_region           = "us-east-1"
db_name              = "caveo_db"
db_username          = "postgres"
# db_password should be provided via Secrets Manager or CI secrets
# db_password          = "<REDACTED>"
cognito_user_pool_id = "us-east-1_xxxxx"
cognito_client_id    = "xxxxxxxxxxxxxxxxxxxxxxxx"
git_repository_url   = "https://github.com/your/repo.git"
key_pair_name        = "your-key-name"
private_key_path     = "~/.ssh/your-key.pem"
instance_type        = "t3.micro"
# Optional
# alert_email          = "you@example.com"
# terraform/terraform.tfvars.example
# Copy this file to terraform.tfvars and fill in your values

# AWS Configuration
aws_region = "us-east-1"
environment = "prod"

# EC2 Configuration
instance_type = "t3.small"
key_pair_name = "your-key-pair-name"
private_key_path = "~/path/to/your-private-key.pem"

# Git Repository
git_repository_url = "https://github.com/your-username/caveo.git"

# Database configuration (your RDS endpoint)
db_host = "<YOUR_RDS_ENDPOINT>"
# db_password should never be committed; provide via Secrets Manager or CI
# db_password = "<REDACTED>"

# AWS Cognito configuration
cognito_user_pool_id = "<COGNITO_USER_POOL_ID>"
cognito_client_id = "<COGNITO_CLIENT_ID>"
